{% include 'header.html.twig' %}
<div id="pageContainer">
    <h1>{{ pageTitle|default("Brak tytułu podstrony")}}</h1>
    <form action="" method="post" id="formstyle">
        <label for="emailInput">Podaj adres e-mail:</label><br>
        <input type="email" name="email" id="emailInput"><br>
        <label for="passwordInput">Podaj hasło:</label><br>
        <input type="password" name="password" id="passwordInput"><br>
        <input type="submit" name="submit" value="Zaloguj">
    </form>
    {% if message is defined %}
    <span class="message">{{ message }}</span>
    {% endif %}
</div>
{% include 'footer.html.twig' %}